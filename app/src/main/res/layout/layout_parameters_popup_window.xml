<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工作流"
        android:textSize="11sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinnerWorkflow"
            style="@style/ParameterSpinnerStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnLoadWorkflows"
            style="@style/ButtonBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_span="1"
            android:src="@drawable/ic_refresh" />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="模型"
        android:textSize="11sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layoutModels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerModels"
            style="@style/ParameterSpinnerStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnLoadModels"
            style="@style/ButtonBorderless"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_refresh" />

    </LinearLayout>

    <!-- 提示词设置 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="提示词"
        android:textSize="11sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginStart="6dp"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            app:singleLine="true"
            app:chipSpacingHorizontal="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/chipGroupTranslation"
            app:layout_constraintBottom_toBottomOf="@id/chipGroupTranslation"
            app:layout_constraintEnd_toStartOf="@id/chipGroupTranslation"
            android:text="翻译："/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTranslation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="0dp"
            app:chipSpacingHorizontal="4dp"
            app:horizontalItemSpacing="0dp"
            app:layout_constraintTop_toBottomOf="@id/chipGroup"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEnZh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checkable="true"
                android:textSize="12sp"
                android:text="中文"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipZhEn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:checkable="true"
                android:text="英文"/>

        </com.google.android.material.chip.ChipGroup>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchPromptsPopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="提示"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.snuabar.mycomfy.view.PromptEditText
        android:id="@+id/promptEditText"
        style="@style/PromptEditTextStyle"
        android:layout_width="match_parent"
        android:layout_marginStart="6dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top"
        android:hint="输入AI提示词..."
        app:layout_constrainedHeight="true"
        app:layout_constraintTop_toBottomOf="@+id/switchTranslateZH"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <requestFocus />
    </com.snuabar.mycomfy.view.PromptEditText>


    <!-- 参数设置 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="参数设置"
        android:textSize="11sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尺寸:" />

            <EditText
                android:id="@+id/etWidth"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="4"
                android:text="512" />

            <ImageButton
                android:id="@+id/btnSwitchWH"
                style="@style/ButtonBorderless"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.4"
                android:src="@drawable/ic_switch_wh" />

            <EditText
                android:id="@+id/etHeight"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLength="4"
                android:text="512" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="种子:" />

            <EditText
                android:id="@+id/etSeed"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="6dp"
                android:layout_weight="1"
                android:hint="可选"
                android:inputType="numberSigned"
                android:text="216" />

            <ImageButton
                android:id="@+id/btnRandom"
                style="@style/ButtonBorderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_refresh" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="步数:" />

            <EditText
                android:id="@+id/etStep"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="20" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:layout_weight="0.5"
                android:text="CFG:" />

            <EditText
                android:id="@+id/etCFG"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="8.0" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:gravity="center|end"
                android:layout_weight="0.5"
                android:text="放大:" />

            <EditText
                android:id="@+id/etUpscaleFactor"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:text="1.0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rowSeconds"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长:" />

            <EditText
                android:id="@+id/etSeconds"
                style="@style/ParameterEditTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="5" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|end"
        android:padding="10dp">

        <Button
            android:id="@+id/btnClose"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="关闭" />

        <!-- 生成按钮 -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交" />
    </LinearLayout>
</LinearLayout>