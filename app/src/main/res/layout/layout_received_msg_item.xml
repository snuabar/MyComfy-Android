<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:gravity="end"
        android:text="yyyy年MM月dd日 HH:mm:ss"
        android:textSize="11sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:text="Comfy"
        android:textStyle="bold"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout"
        app:layout_constraintStart_toStartOf="@id/constraintLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/msg_received_item_bg"
        android:padding="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.75">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/gray_df"
            android:scaleType="fitCenter"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/gray_5583"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvScaleFactor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimaryVariant"
                    android:paddingHorizontal="4dp"
                    android:text="1.5x"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:paddingHorizontal="4dp"
                    android:text="1024 x 1024"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnShare"
                style="@style/ButtonBorderless"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_share" />

            <ImageButton
                android:id="@+id/btnSave"
                style="@style/ButtonBorderless"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_save" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvTip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:gravity="start|top"
        android:text="unknown error"
        android:textColor="@color/gray_83"
        android:textSize="11sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0" />


    <TextView
        android:id="@+id/tvDateCompletion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:focusable="false"
        android:gravity="end"
        android:text="yyyy年MM月dd日 HH:mm:ss"
        android:textSize="11sp"
        app:layout_constrainedHeight="true"
        app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout" />

    <ImageButton
        android:id="@+id/btnInterrupt"
        style="@style/ButtonBorderless"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_stop"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayout"
        app:layout_constraintStart_toEndOf="@id/constraintLayout"
        app:layout_constraintTop_toTopOf="@id/constraintLayout" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUpscale"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintStart_toEndOf="@+id/constraintLayout"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

        <ImageButton
            android:id="@+id/btnX2"
            style="@style/ButtonBorderless"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="0dp"
            android:src="@drawable/ic_x2"
            app:layout_constraintBottom_toTopOf="@id/btnX4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnX4"
            style="@style/ButtonBorderless"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="0dp"
            android:src="@drawable/ic_x4"
            app:layout_constraintBottom_toTopOf="@+id/btnXN"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnX2" />

        <ImageButton
            android:id="@+id/btnXN"
            style="@style/ButtonBorderless"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="0dp"
            android:src="@drawable/ic_xn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnX4" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>