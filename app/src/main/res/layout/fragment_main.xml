<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:padding="10dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 服务器设置 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="服务器设置"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etServerIp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="服务器IP地址"
                    android:text="192.168.1.17" />

                <EditText
                    android:id="@+id/etServerPort"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="端口"
                    android:text="8000" />

                <Button
                    android:id="@+id/btnTestConnection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="测试连接" />
            </LinearLayout>

            <!-- 提示词输入 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="图像描述"
                android:textSize="11sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:gravity="top"
                android:text="@string/default_prompt"
                android:textSize="14sp"
                android:maxHeight="100dp"
                android:hint="请输入图像描述..."
                android:minHeight="50dp" />

            <!-- 参数设置 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="参数设置"
                android:textSize="11sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图像宽度:" />

                <EditText
                    android:id="@+id/etWidth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:text="512" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="图像高度:" />

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:textSize="14sp"
                    android:text="512" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="随机种子:" />

                <EditText
                    android:id="@+id/etSeed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="216"
                    android:hint="可选"
                    android:textSize="14sp"
                    android:inputType="number" />
            </LinearLayout>

            <!-- 生成按钮 -->
            <Button
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生成图像"
                android:textSize="16sp" />

            <!-- 进度显示 -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp" />

            <!-- 生成的图像 -->
            <ImageView
                android:id="@+id/ivGeneratedImage"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="6dp"
                android:background="#f0f0f0"
                android:scaleType="fitCenter" />

            <!-- 下载按钮 -->
            <Button
                android:id="@+id/btnDownload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下载图像"
                android:visibility="gone" />

            <!-- 请求ID -->
            <TextView
                android:id="@+id/tvRequestId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp" />

            <!-- 日志输出 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="日志"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:minHeight="100dp"
                android:padding="8dp"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>